                        <h6 class="mb-0 text-muted">Total Pengeluaran</h6>
                        <h5 class="text-danger mt-1">- {{ totalExpense }}</h5>
                    </div>
                    <i class="bi bi-arrow-up-circle-fill text-danger fs-2"></i>
                </div>
            </div>
        </div>
    </div>

